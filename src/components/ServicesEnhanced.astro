<style>
  .services {
    background: linear-gradient(180deg, var(--clr-bg-warm) 0%, white 50%, var(--clr-bg-warm) 100%);
    position: relative;
    overflow: hidden;
  }

  .services::before {
    content: '';
    position: absolute;
    top: 0;
    left: -50%;
    right: -50%;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, var(--clr-safety-orange) 50%, transparent 100%);
    animation: scan 8s linear infinite;
  }

  @keyframes scan {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--clr-safety-orange);
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    box-shadow: 0 2px 10px rgba(242, 92, 42, 0.1);
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--ff-display);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--clr-brand-teal);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--clr-ink-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  /* Service Cards */
  .service-card {
    position: relative;
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 10px 40px rgba(15, 45, 53, 0.08);
    border: 2px solid var(--clr-border);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(15, 45, 53, 0.15);
    border-color: var(--clr-safety-orange);
  }

  .service-card--featured {
    border-color: var(--clr-safety-orange);
    background: linear-gradient(135deg, white 0%, rgba(242, 92, 42, 0.02) 100%);
    transform: scale(1.05);
  }

  .service-card--featured:hover {
    transform: scale(1.08) translateY(-8px);
  }

  .service-card__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, var(--clr-safety-orange) 0%, var(--clr-coral) 100%);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    box-shadow: 0 4px 20px rgba(242, 92, 42, 0.3);
  }

  .service-card__header {
    text-align: center;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--clr-border);
    margin-bottom: 1.5rem;
  }

  .service-card__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, rgba(13, 75, 75, 0.1) 0%, rgba(13, 75, 75, 0.05) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    transition: transform 0.3s ease;
  }

  .service-card:hover .service-card__icon {
    transform: rotate(5deg) scale(1.1);
  }

  .service-card--featured .service-card__icon {
    background: linear-gradient(135deg, rgba(242, 92, 42, 0.1) 0%, rgba(255, 122, 69, 0.1) 100%);
  }

  .service-card__name {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--clr-brand-teal);
    margin-bottom: 0.5rem;
  }

  .service-card__target {
    font-size: 0.9rem;
    color: var(--clr-ink-muted);
    margin-bottom: 1rem;
  }

  .service-card__price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
  }

  .price-from {
    font-size: 0.75rem;
    color: var(--clr-ink-muted);
  }

  .price-amount {
    font-size: 2rem;
    font-weight: 900;
    color: var(--clr-brand-teal);
  }

  .service-card--featured .price-amount {
    color: var(--clr-safety-orange);
  }

  .price-period {
    font-size: 0.9rem;
    color: var(--clr-ink-muted);
  }

  /* Features */
  .service-card__features {
    flex-grow: 1;
    margin-bottom: 1.5rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(229, 224, 214, 0.5);
    transition: all 0.3s ease;
  }

  .feature-item:last-child {
    border-bottom: none;
  }

  .feature-item:hover {
    padding-left: 0.5rem;
    background: linear-gradient(90deg, rgba(242, 92, 42, 0.05) 0%, transparent 100%);
  }

  .feature-item.highlight {
    color: var(--clr-safety-orange);
    font-weight: 600;
  }

  .feature-icon {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--clr-success);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: bold;
    flex-shrink: 0;
  }

  .feature-item.highlight .feature-icon {
    background: var(--clr-safety-orange);
  }

  /* Footer */
  .service-card__footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--clr-border);
  }

  .btn--block {
    width: 100%;
    justify-content: center;
  }

  .btn--outline {
    background: transparent;
    border: 2px solid var(--clr-brand-teal);
    color: var(--clr-brand-teal);
  }

  .btn--outline:hover {
    background: var(--clr-brand-teal);
    color: white;
  }

  .service-card__note {
    text-align: center;
    font-size: 0.75rem;
    color: var(--clr-ink-muted);
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* Additional Services */
  .additional-services {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 10px 40px rgba(15, 45, 53, 0.08);
    margin-bottom: 3rem;
  }

  .additional-services__title {
    text-align: center;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--clr-brand-teal);
    margin-bottom: 2rem;
  }

  .add-ons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .add-on {
    text-align: center;
    padding: 1.5rem;
    border-radius: 14px;
    background: var(--clr-bg-warm);
    transition: all 0.3s ease;
  }

  .add-on:hover {
    background: white;
    box-shadow: 0 8px 30px rgba(15, 45, 53, 0.1);
    transform: translateY(-4px);
  }

  .add-on__icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .add-on h4 {
    font-size: 1rem;
    font-weight: 800;
    color: var(--clr-brand-teal);
    margin-bottom: 0.5rem;
  }

  .add-on p {
    font-size: 0.85rem;
    color: var(--clr-ink-muted);
  }

  /* Trust Banner */
  .trust-banner {
    background: linear-gradient(135deg, var(--clr-brand-teal) 0%, var(--clr-brand-teal-light) 100%);
    border-radius: 999px;
    padding: 1.5rem 2rem;
    box-shadow: 0 10px 40px rgba(13, 75, 75, 0.2);
  }

  .trust-banner__content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
  }

  .trust-icon {
    font-size: 1.2rem;
  }

  .trust-text {
    font-weight: 700;
    font-size: 0.9rem;
  }

  .trust-divider {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.3);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-card--featured {
      transform: none;
    }

    .trust-divider {
      display: none;
    }

    .trust-banner__content {
      flex-direction: column;
      text-align: center;
    }

    .additional-services {
      padding: 2rem 1.5rem;
    }
  }
</style>