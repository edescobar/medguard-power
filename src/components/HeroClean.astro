---
import Navigation from './Navigation.astro';
import Icon from './Icons.astro';
---

<Navigation />

<section class="hero">
  <div class="hero__background">
    <div class="hero__pattern"></div>
  </div>

  <div class="container hero__content">
    <!-- Trust Indicator -->
    <div class="trust-badge fade-down">
      <Icon name="star" size={20} class="trust-badge__icon" />
      <span class="trust-badge__text">Serving 50+ Healthcare Facilities in South Florida</span>
    </div>

    <!-- Main Content -->
    <div class="hero__main">
      <p class="hero__eyebrow fade-up">
        <Icon name="location" size={16} />
        Miami-Dade & Broward Counties â€¢ Healthcare Exclusive
      </p>

      <h1 class="hero__title fade-up display">
        Never Fail an<br/>
        <span class="text-gradient">AHCA Inspection</span><br/>
        Again
      </h1>

      <p class="hero__subtitle fade-up">
        Your generators keep patients safe. We keep your generators compliant.
        <strong>4-hour emergency response. Digital documentation. Zero citations guaranteed.</strong>
      </p>

      <!-- Value Props Grid -->
      <div class="value-props fade-up">
        <div class="value-prop">
          <div class="value-prop__icon">
            <Icon name="hospital" size={28} />
          </div>
          <div class="value-prop__content">
            <h3>Healthcare Only</h3>
            <p>100% focused on medical facilities</p>
          </div>
        </div>

        <div class="value-prop">
          <div class="value-prop__icon">
            <Icon name="lightning" size={28} />
          </div>
          <div class="value-prop__content">
            <h3>4-Hour SLA</h3>
            <p>Guaranteed emergency response</p>
          </div>
        </div>

        <div class="value-prop">
          <div class="value-prop__icon">
            <Icon name="smartphone" size={28} />
          </div>
          <div class="value-prop__content">
            <h3>Digital Portal</h3>
            <p>24/7 compliance documentation</p>
          </div>
        </div>
      </div>

      <!-- CTAs -->
      <div class="hero__actions fade-up">
        <a href="#contact" class="btn btn--primary btn--large">
          <Icon name="certificate" size={20} />
          Get Free Compliance Audit
          <Icon name="arrow-right" size={20} />
        </a>
        <a href="tel:305-XXX-XXXX" class="btn btn--secondary btn--large">
          <Icon name="phone" size={20} />
          (305) XXX-XXXX
        </a>
      </div>

      <!-- Urgency Banner -->
      <div class="urgency-banner fade-up">
        <div class="urgency-banner__content">
          <Icon name="hurricane" size={24} class="urgency-banner__icon" />
          <span class="urgency-banner__text">
            <strong>Hurricane Season Alert:</strong> Schedule your pre-season inspection now
          </span>
        </div>
      </div>
    </div>

    <!-- Social Proof -->
    <div class="social-proof fade-up">
      <div class="social-proof__item">
        <div class="social-proof__number">100%</div>
        <div class="social-proof__label">Pass Rate</div>
      </div>
      <div class="social-proof__divider"></div>
      <div class="social-proof__item">
        <div class="social-proof__number">50+</div>
        <div class="social-proof__label">Facilities</div>
      </div>
      <div class="social-proof__divider"></div>
      <div class="social-proof__item">
        <div class="social-proof__number">24/7</div>
        <div class="social-proof__label">Support</div>
      </div>
      <div class="social-proof__divider"></div>
      <div class="social-proof__item">
        <div class="social-proof__number">4hr</div>
        <div class="social-proof__label">Response</div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    padding: 120px 0 80px;
    overflow: hidden;
    background: var(--clr-bg-section);
  }

  /* Background Effects */
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
    opacity: 0.4;
  }

  .hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      repeating-linear-gradient(
        -45deg,
        transparent,
        transparent 40px,
        rgba(242, 92, 42, 0.01) 40px,
        rgba(242, 92, 42, 0.01) 80px
      );
  }

  /* Trust Badge */
  .trust-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: white;
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    box-shadow: 0 2px 10px rgba(15, 45, 53, 0.08);
    margin-bottom: 2rem;
    border: 1px solid var(--clr-border);
  }

  .trust-badge__icon {
    color: var(--clr-safety-orange);
  }

  .trust-badge__text {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--clr-brand-teal);
  }

  /* Main Content */
  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 800;
    font-size: 0.95rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--clr-safety-orange);
    margin-bottom: 1.5rem;
  }

  .hero__eyebrow svg {
    color: var(--clr-safety-orange);
  }

  .hero__title {
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    line-height: 1;
    margin-bottom: 1.5rem;
    color: var(--clr-brand-teal);
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--clr-safety-orange) 0%, var(--clr-coral) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero__subtitle {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--clr-ink-muted);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .hero__subtitle strong {
    color: var(--clr-brand-teal);
    font-weight: 700;
  }

  /* Value Props */
  .value-props {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    max-width: 750px;
    margin: 2.5rem auto;
  }

  .value-prop {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: white;
    padding: 1.5rem;
    border-radius: 14px;
    box-shadow: 0 2px 10px rgba(15, 45, 53, 0.06);
    border: 1px solid var(--clr-border);
    transition: all 0.3s ease;
  }

  .value-prop:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(15, 45, 53, 0.1);
  }

  .value-prop__icon {
    width: 52px;
    height: 52px;
    background: linear-gradient(135deg, rgba(242, 92, 42, 0.08) 0%, rgba(255, 122, 69, 0.08) 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--clr-safety-orange);
  }

  .value-prop__content {
    text-align: left;
  }

  .value-prop__content h3 {
    font-size: 1rem;
    font-weight: 800;
    color: var(--clr-brand-teal);
    margin-bottom: 0.25rem;
  }

  .value-prop__content p {
    font-size: 0.85rem;
    color: var(--clr-ink-muted);
    line-height: 1.4;
  }

  /* CTA Buttons */
  .hero__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2.5rem 0;
  }

  .btn--large {
    padding: 1rem 2rem;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn--large svg {
    flex-shrink: 0;
  }

  /* Urgency Banner */
  .urgency-banner {
    background: linear-gradient(135deg, rgba(255, 184, 77, 0.08) 0%, rgba(255, 184, 77, 0.02) 100%);
    border: 1px solid var(--clr-warning);
    border-radius: 14px;
    padding: 1rem 1.5rem;
    margin: 2rem auto;
    max-width: 600px;
  }

  .urgency-banner__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .urgency-banner__icon {
    color: var(--clr-warning);
    flex-shrink: 0;
  }

  .urgency-banner__text {
    font-size: 0.95rem;
    color: var(--clr-brand-teal);
  }

  /* Social Proof */
  .social-proof {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-top: 3rem;
    padding: 1.5rem;
    background: white;
    border-radius: 999px;
    box-shadow: 0 2px 15px rgba(15, 45, 53, 0.08);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .social-proof__item {
    text-align: center;
  }

  .social-proof__number {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--clr-safety-orange);
  }

  .social-proof__label {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--clr-ink-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .social-proof__divider {
    width: 1px;
    height: 30px;
    background: var(--clr-border);
  }

  /* Animations */
  .fade-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .fade-down {
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeDown 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeDown {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-up:nth-child(2) { animation-delay: 0.1s; }
  .fade-up:nth-child(3) { animation-delay: 0.2s; }
  .fade-up:nth-child(4) { animation-delay: 0.3s; }
  .fade-up:nth-child(5) { animation-delay: 0.4s; }
  .fade-up:nth-child(6) { animation-delay: 0.5s; }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 100px 0 60px;
    }

    .value-props {
      grid-template-columns: 1fr;
    }

    .hero__actions {
      flex-direction: column;
      width: 100%;
    }

    .btn--large {
      width: 100%;
      justify-content: center;
    }

    .social-proof {
      gap: 1rem;
      padding: 1rem;
    }

    .social-proof__number {
      font-size: 1.2rem;
    }
  }
</style>